module decimal_in_hex (reset, incr, nextInc, HEX);

	input logic reset, incr;
	output logic [6:0] HEX;
	output logic nextInc;
	
	always_comb begin
		if (reset) begin
			HEX = 7'b1000000;
		end else 
			case (count)
				0: HEX = 7'b1000000;
				1: HEX = 7'b1111001;
				2: HEX = 7'b0100100;
				3: HEX = 7'b0110000;
				4: HEX = 7'b0011001;
				5: HEX = 7'b0010010;
				6: HEX = 7'b0000010;
				7: HEX = 7'b1111000;
				8: HEX = 7'b0000000;
				9: HEX = 7'b0010000;
				10: HEX = 7'b1000000;
				default: HEX = 7'bx;
			endcase
	end
	